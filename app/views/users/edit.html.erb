<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>User info</h1>
  		  <% if @user.errors.any? %>
        We have found <%= @user.errors.count %> errors.
        <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>
  		  <h1>Editing User</h1>
        <%= form_with model: @user do |f| %>
          <label for="inputName">Name</label></br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br>
          <label for="inputImage">ProfileImage</label></br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></br>
          <laberl for="inputIntroduction">Introduction</label></br>
          <%= f.text_area :introduction %></br>
          <%= f.submit "Update User" %>
        <% end %>

    </div>
  </div>
</div>

