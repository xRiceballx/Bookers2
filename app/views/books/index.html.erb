<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name : <%= @user.name %></h3>
  <h3>introduction : <%= @user.introduction %></h3>
  <%= link_to 'Update Profile', edit_user_path(current_user.id) %>
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<% @books.each do |book| %>
  <div>
    <%= image_tag book.get_image %>
    <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
    <p><%= post_image.title %></p>
    <p><%= post_image.body %></p>
    <p>ユーザーネーム：<%= book.user.name %></p>
  </div>
<% end %>

<% if @book.user == current_user %>
  <%= link_to "削除", book_path(@book), method: :delete %>
<% end %>