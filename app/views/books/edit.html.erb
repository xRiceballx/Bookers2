<main>
  <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <% if @book.errors.any? %>
      We have found <%= @book.errors.count %> errors.
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>
  		<h1>Editing Book</h1>
  		<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
          <label for="book_title">Title</label>
          <%= f.text_field :title, id:"book_title", placeholder:"", class: 'form-control'%>
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, rows:'5', id:"book_opinion", placeholder: "", class: 'form-control' %>
          <%= f.submit "Update Book", class: 'btn btn-success' %>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
  		<%= link_to "Back", books_path %>
  </div>
</div>
</div>
</main>
